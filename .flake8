[flake8]
application_import_names = fdk_rdf_parser_service
select = ANN,B,B9,BLK,C,D,DAR,E,F,I,N,RST,S,W
docstring-convention = google
ignore =
    # Missing type annotation for self in method
    ANN101,
    # Dynamically typed expressions (typing.Any) are disallowed
    ANN401,
    # Additional newline in a group of imports. Conflict with I003.
    I202,
    # Black will break before a binary operator.
    # This is compliant with PEP 8, W503 goes against this PEP 8 recommendation.
    W503
per-file-ignores =
    tests/*:
      # Use of assert is ok in tests (AssertionError should be used in running code).
      S101,
      # Standard pseudo-random generators are not suitable for security/cryptographic purposes.
      S311,
      # Missing docstrings
      D100,
      D103,
      # Line too long
      E501,
      B950,
    fdk_rdf_parser_service/config.py: D107
    fdk_rdf_parser_service/parser/rdf_utils/ns.py: E501, D100, D103
    # Unused imports (false positive)
    fdk_rdf_parser_service/**__init__.py: F401
    fdk_rdf_parser_service/**.py:
      # Missing docstrings
      D100,
      D101,
      D102,
      D103,
      D105,
      # ignore mixedCase
      N815,
max-line-length = 120
import-order-style = google
exclude =
    .git,
    .cache,
    .mypy_cache,
    __pycache__,
    dist,
